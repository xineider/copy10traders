<%- include('../includes/menu_header'); %>

<div class="page-content">

	<section class="margin-bottom-sm margin-top-sm">
		<div class="row">

			<% if (typeof data[usuario.id +'_operadores'] != 'undefined' && data[usuario.id +'_operadores'].length > 0) {
				for (var i = 0; i < data[usuario.id +'_operadores'].length; i++) {%>

				<div class="col-sm-12 col-lg-6 margin-b-20">
					<div class="card h-100 gradient-card-1 color-blue card-small relative">


						<div data-modal="#modalinfo" data-link="/sistema/traders_globais/video-apresentacao/<%= data[usuario.id +'_operadores'][i].numero %>"  class="operadores_modal_video pointer modal-mount">
							<i class="fas fa-info-circle color-secondary"></i>
						</div>

						<div class="row h100">
							<div class="col-sm-12 col-lg-3 col-xl-2 operador_foto d-flex align-items-center justify-content-center">
								<img src="/public/images/operadores/trader<%=data[usuario.id +'_operadores'][i].numero %>.png">
							</div>
							<div class="col-sm-12 col-lg-9 col-xl-10 text-align-center-mobile">
								<div class="text-align-center-mobile">
									<span class="operador_nome"><%= data[usuario.id +'_operadores'][i].nome %></span>
									<img class="margin-l-10" src="/public/images/operadores/<%= data[usuario.id +'_operadores'][i].pais %>.png">
								</div>
								<div class="row no-gutters">
									<div class="col-sm-12 col-lg-6 col-xl-8">
										<div class="operador_progress_bar">
											Trader made in <%= data[usuario.id +'_operadores'][i].pais %>
											<div class="progress">
												<div class="progress-bar progress_bar_success" role="progressbar" style="width: <%= data[usuario.id +'_operadores'][i].performance %>%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
											</div>
										</div>

									</div>

									<div class="col-sm-12 col-lg-6 col-xl-4">
										<div class="operador_performance_box">
											<div class="margin-l-5"><span class="operador_performance_title"><%=data[usuario.id +'_operadores'][i].performance %> </span><span class="operador_permance_label margin-l-10">Performance</span></div>
											<div class="margin-t-5 margin-l-5"><span class="operador_performance_title"><%= data[usuario.id +'_qtd_operacoes'][i] %></span><span class="operador_permance_label margin-l-30">Operações</span></div>

										</div>
									</div>

								</div>

							</div>
						</div>


						<% if(usuario.nivel == 3){ %>
						<div class="row">
							<div class="col-sm-12">
								<div class="custom-control custom-switch ">
									<input type="checkbox" class="custom-control-input copiar_este_trader" id="copiar_trader_<%= data[usuario.id +'_operadores'][i].numero%>" value="<%= data[usuario.id +'_operadores'][i].numero%>" <%= data[usuario.id +'_usuarios_operadores'].operadores.includes(data[usuario.id +'_operadores'][i].numero) == true ? 'checked' : '' %> >
									
									<% if(data[usuario.id +'_usuarios_operadores'].operadores.includes(data[usuario.id +'_operadores'][i].numero) == true){ %>

									<label class="custom-control-label label_switch_copiar_<%= data[usuario.id +'_operadores'][i].numero%>" for="copiar_trader_<%= data[usuario.id +'_operadores'][i].numero%>">Copiando Trader</label>

									<%}else{%>
									<label class="custom-control-label label_switch_copiar_<%= data[usuario.id +'_operadores'][i].numero%>" for="copiar_trader_<%= data[usuario.id +'_operadores'][i].numero%>">Copiar este Trader</label>

									<%}%>
								</div>

							</div>
						</div>

						<%}%>


					</div>
				</div>


				<%}
			} %>
		</div>

	</section>


</div>





